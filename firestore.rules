rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // This is the rule that protects user data.
    // It matches the path to a user's journal entries.
    match /users/{userId}/entries/{entryId} {
      // Allow read, create, update, and delete operations
      // ONLY IF the authenticated user's ID (request.auth.uid)
      // is the same as the userId in the document path.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
